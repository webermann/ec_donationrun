<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
        <TCEforms>
          <sheetTitle>Konfiguration</sheetTitle>
        </TCEforms>
        <type>array</type>
        <el>
          <switchableControllerActions>
            <TCEforms>
              <label>Standardaktion des Plugins</label>
              <config>
                <type>select</type>
                <items>
                   <numIndex index="0">
                     <numIndex index="0">Übersicht Teilnehmer</numIndex>
                     <numIndex index="1">Registration->index;Registration->new;Registration->create;Donation->new;Donation->create</numIndex>
                   </numIndex>
                   <numIndex index="1">
                     <numIndex index="0">Spenderübersicht für Läufer</numIndex>
                     <numIndex index="1">Donation->index;Donation->new;Donation->create</numIndex>
                   </numIndex>
                   <numIndex index="2">
                     <numIndex index="0">Spenden ohne Login</numIndex>
                     <numIndex index="1">Donation->generateOfflineDonationLink;Donation->new;Donation->newOffline;Donation->create</numIndex>
                   </numIndex>
                   <numIndex index="3">
                     <numIndex index="0">Bestätigung ohne Login</numIndex>
                     <numIndex index="1">Donation->confirm</numIndex>
                   </numIndex>
                   <numIndex index="4">
                     <numIndex index="0">Link zur Registrierung</numIndex>
                     <numIndex index="1">Registration->generateNewLink</numIndex>
                   </numIndex>
                 </items>
              </config>
            </TCEforms>
          </switchableControllerActions>
        </el>
      </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>